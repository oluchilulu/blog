<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    * {
    padding: 0;
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
    box-sizing: border-box;
}

#container {
    padding: 30px;
    display: grid;
    grid-template-columns: 150px auto;
    gap: 40px;
}

#container1 {
    text-align: center;
}

#container1 img {
    width: 100%;
    border-radius: 5px;
}

#head {
    padding-top: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#head h1 {
    font-size: 300%;
}

hr {
    margin: 20px 20px 50px 20px;
}

#articles {
    display: grid;
    grid-template-columns: repeat(3, 350px);
    gap: 40px;
    justify-content: center;
}

#articles1 {
    height: 200px;
}

#container2 img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

#details {
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
}
</style>

<body>


    <h1>WELCOME TO OLUCHI'S BLOG</h1>
  <div id="container">
    <div id="container1">
     <div><img src=<%= foundUser.image %>></div> 
  
        <div>
            <h3><%= foundUser.fullname %></h3>
            <h3><%= foundUser.username %></h3>       
        </div>
    </div>

    <div id="container2">
      <div id="head"><h1>ARTICLES</h1></div>
      <hr>
      <div id="articles">
          <% foundKay.forEach(element => { %>
           <div>
              <div id="articles1"><img src=<%= element.image %> alt="article image"></div>
              <div id="details">
                  <h3>AUTHOR<%= element.author %></h3>
                  <h4>TITLE: <%= element.title %></h4>
                  <h4>CATEGORY: <%= element.category %></h4>
                  <p><%= element.description.substring(0, 300) + "... " %><a href=/<%= element._id %>>see more</a></p>
              </div>
           </div>
          <% }) %>
      </div>
  </div>

  </div>
</html>

